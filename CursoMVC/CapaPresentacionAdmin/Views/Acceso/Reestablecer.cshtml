
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperación de Contraseña</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Eliminar cualquier margen y padding adicional en el pie de página */
        #layoutAuthentication_footer {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Recuperación de Contraseña</h3>
                                </div>
                                <div class="card-body">
                                    <div class="small mb-3 text-muted">
                                        Ingrese su dirección de correo electrónico y le enviaremos su nueva contraseña.
                                    </div>
                                    <form action="@Url.Action("Reestablecer", "Acceso")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="correo" type="email" autocomplete="off" required />
                                            <label for="inputEmail">Email</label>
                                        </div>
                                        @if (ViewBag.Error != null)
                                        {
                                            <div class="form-floating mb-3">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewBag.Error
                                                </div>
                                            </div>
                                        }
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="@Url.Action("Index", "Acceso")">Regresar al login</a>
                                            <button class="btn btn-primary" type="submit">Restablecer la contraseña</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">
                                        <a href="register.html">¿Necesitas una cuenta? Regístrate</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <!-- Pie de página sin contenido extra -->
        <div id="layoutAuthentication_footer">
            <footer class="py-0 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <!-- Sin contenido -->
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
